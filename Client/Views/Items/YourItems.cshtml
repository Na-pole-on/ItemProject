@model List<ItemViewModel>

<div class="container row">

    @foreach(var item in Model)
    {
        <div class="col-4">
            <div class="p-0 my-3 border rounded">
                <div class="card">
                    <img src="@item.PhotoUrl" class="card-img-top" />
                    <div class="card-body">
                        <h3 class="card-title">@item.Name</h3>
                        <p class="card-text">@item.ShortDescription</p>

                        <div class="row">
                            <div class="col-6 pt-1">
                                <span style="font-size:1.5rem;">$@string.Format("{0:c}", item.Price)</span>
                            </div>
                            <div class="col-3 pt-1">
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                            </div>
                            <div class="col-3 pt-1">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>